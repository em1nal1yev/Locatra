@using LocatraMain.ViewModels
@model LoginVm

@{
    ViewData["Title"] = "Daxil ol";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="text-center mb-4">
        <h3 class="mt-2">Locatra - Giriş</h3>
        <p class="text-muted">Zəhmət olmasa giriş məlumatlarınızı daxil edin.</p>
    </div>

    <form method="post" class="border p-4 rounded shadow-sm bg-white">
        @if (!ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
        }

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Şifrə</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Şifrənizi daxil edin" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <button type="submit" class="btn btn-primary">Daxil ol</button>
            <a asp-action="ForgotPassword" asp-controller="Account" class="text-danger small text-decoration-none">Şifrəni unutmusunuz?</a>
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Register" class="text-primary fw-semibold small text-decoration-none">
                Hesabınız yoxdur? Qeydiyyatdan keç
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
