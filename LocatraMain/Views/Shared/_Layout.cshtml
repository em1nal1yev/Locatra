<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Locatra </title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.ico">

    <!-- CSS here -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/flaticon.css">
    <link rel="stylesheet" href="~/assets/css/slicknav.css">
    <link rel="stylesheet" href="~/assets/css/animate.min.css">
    <link rel="stylesheet" href="~/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="~/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/assets/css/slick.css">
    <link rel="stylesheet" href="~/assets/css/nice-select.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
    <!-- Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img width="100" src="~/assets/img/logo/LocatraLogo.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <!-- Preloader Start -->
    <header>
        <!-- Header Start -->
        <header>
            <!-- Header Start -->
            <div class="header-area">
                <div class="main-header ">
                    <div class="header-bottom header-sticky" style="background-color: #f4efe6;">
                        <div class="container">
                            <div class="row align-items-center">
                                <!-- Logo -->
                                <div class="col-xl-2 col-lg-2 col-md-1">
                                    <div class="logo" style="background-color: #e8e1d1; padding: 8px 10px; border-radius: 12px; display: inline-block;">
                                        <a asp-action="Index" asp-controller="Home" ><img width="80" src="~/assets/img/logo/LocatraLogo.png" alt="" style="display: block;"></a>
                                    </div>

                                </div>

                                <div class="col-xl-10 col-lg-10 col-md-10">
                                    <!-- Main-menu -->
                                    <div class="main-menu f-right d-none d-lg-block">
                                        <nav>
                                            <ul id="navigation">
                                                <li><a asp-controller="Home" asp-action="Index">Ev</a></li>
                                                <li><a asp-controller="Auction" asp-action="Index">Hərraclar</a></li>
                                                <li><a asp-controller="Sale" asp-action="Index">Məhsullar</a></li>
                                                <li><a asp-controller="Cart" asp-action="Index">Səbətim</a></li> 
                                                <li><a asp-controller="Sale" asp-action="MyWishlist">İstək siyahım</a></li>
                                                <li>
                                                    <a href="#">Account</a>
                                                    <ul class="submenu">
                                                        @if (User.Identity.IsAuthenticated)
                                                        {
                                                            <li><a asp-controller="Profile" asp-action="Index">Profilim</a></li>
                                                            <li><a asp-controller="Account" asp-action="Logout">Çıxış</a></li>
                                                        }
                                                        else
                                                        {
                                                            <li><a asp-controller="Account" asp-action="Login">Giriş</a></li>
                                                            <li><a asp-controller="Account" asp-action="Register">Qeydiyyatdan keç</a></li>
                                                        }
                                                    </ul>
                                                </li>
                                            </ul>

                                        </nav>
                                    </div>
                                </div>
                                <!-- Mobile Menu -->
                                <div class="col-12">
                                    <div class="mobile_menu d-block d-lg-none"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Header End -->
    </header>
    @RenderBody()
    <footer>
        <!-- Footer Start-->
        <div class="footer-area footer-bg" data-background="assets/img/service/footer_bg.jpg" style="padding: 30px 0;">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <!-- Sol hissə -->
                    <div class="col-md-6">
                        <div class="footer-logo mb-2">
                            <a href="index.html"><img width="80" src="~/assets/img/logo/LocatraLogo.png" alt=""></a>
                        </div>
                        <p class="text-white">
                            Locatra haqqında təklif və rəyləriniz varsa
                            <strong>locatra@gmail.com</strong> - a göndərə bilərsiniz.
                        </p>
                    </div>

                    <!-- Sağ hissə -->
                    <div class="col-md-6 text-md-end text-center mt-4 mt-md-0">
                        <p class="text-white mb-0">
                            Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS here -->
    <!-- All JS Custom Plugins Link Here here -->
    <script src="~/assets/js/vendor/modernizr-3.5.0.min.js"></script>

    <!-- Jquery, Popper, Bootstrap -->
    <script src="~/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <!-- Jquery Mobile Menu -->
    <script src="~/assets/js/jquery.slicknav.min.js"></script>

    <!-- Jquery Slick , Owl-Carousel Plugins -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <script src="~/assets/js/slick.min.js"></script>
    <!-- One Page, Animated-HeadLin -->
    <script src="~/assets/js/wow.min.js"></script>
    <script src="~/assets/js/animated.headline.js"></script>
    <script src="~/assets/js/jquery.magnific-popup.js"></script>

    <!-- Scrollup, nice-select, sticky -->
    <script src="~/assets/js/jquery.scrollUp.min.js"></script>
    <script src="~/assets/js/jquery.nice-select.min.js"></script>
    <script src="~/assets/js/jquery.sticky.js"></script>

    <!-- contact js -->
    <script src="~/assets/js/contact.js"></script>
    <script src="~/assets/js/jquery.form.js"></script>
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/mail-script.js"></script>
    <script src="~/assets/js/jquery.ajaxchimp.min.js"></script>

    <!-- Jquery Plugins, main Jquery -->
    <script src="~/assets/js/plugins.js"></script>
    <script src="~/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
